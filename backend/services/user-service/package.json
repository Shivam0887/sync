{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User service manages the user authentication, and user details.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx --import=./src/instrument.ts --watch src/index.ts",
    "build": "pnpm i && tsc && tsc-alias && pnpm sentry:sourcemaps",
    "start": "node --import=./dist/instrument.js ./dist/index.js",
    "drizzle:migrate": "pnpm drizzle-kit migrate",
    "drizzle:generate": "pnpm drizzle-kit generate",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org shivam-org --project node-express ./dist && sentry-cli sourcemaps upload --org shivam-org --project node-express ./dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/cli": "^2.46.0",
    "@sentry/node": "^9.35.0",
    "@sentry/profiling-node": "^9.35.0",
    "argon2": "^0.43.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "postgres": "^3.4.7",
    "zod": "^3.25.32"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.21",
    "drizzle-kit": "^0.31.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
