{
  "name": "api-gateway-service",
  "version": "1.0.0",
  "description": "API Gateway built with Node.js",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --import=./src/instrument.ts src/index.ts",
    "build": "pnpm i && tsc && tsc-alias && pnpm sentry:sourcemaps",
    "start": "node --import=./dist/instrument.js ./dist/index.js",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org shivam-org --project node-express dist && sentry-cli sourcemaps upload --org shivam-org --project node-express dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/cli": "^2.46.0",
    "@sentry/node": "^9.35.0",
    "@sentry/profiling-node": "^9.35.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
